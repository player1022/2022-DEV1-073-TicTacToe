package tictactoegaming;

import java.util.Scanner;

public class TicTacGame {
	
	public static void playgame( String symbol) {
		System.out.println("Here is the board you will play");
		char [][] tictac = new char[3][3];
		printGrid(tictac);
		
		System.out.println("enter the position where you want to play from 1-9");
		Scanner sc = new Scanner(System.in);
		int position = sc.nextInt();
		
		if(isValidPosition(tictac,position))
		{
			placeSymbol(tictac, position,symbol);
		}
		else 
		{
			System.out.println("you cannot play in this position");
		}
		
	}

	public static void printGrid(char[][] tictac)
		{
		System.out.println(tictac[0][0]+"|"+tictac[0][1]+"|"+tictac[0][2]);
		System.out.println("--"+"--"+"-");
		System.out.println(tictac[1][0]+"|"+tictac[1][1]+"|"+tictac[1][2]);
		System.out.println("--"+"--"+"-");
		System.out.println(tictac[2][0]+"|"+tictac[2][1]+"|"+tictac[2][2]);
		System.out.println("--"+"--"+"-");
	
		}
	
	private static void placeSymbol(char[][] tictac, int position, String symbol)
	{
		char sym = symbol.charAt(0);
		switch(position)
		{
		case 1:
			tictac[0][0]=sym;
			break;
		case 2:
			tictac[0][1]=sym;
			break;
		case 3:
			tictac[0][2]=sym;
			break;
		case 4 :
			tictac[1][0]=sym;
			break;
		case 5:
			tictac[1][1]=sym;
			break;
		case 6:
			tictac[1][2]=sym;
			break;
		case 7:
			tictac[2][0]=sym;
			break;
		case 8:
			tictac[2][1]=sym;
			break;
		case 9:
			tictac[2][2]=sym;
			break;		
		}
	}
	
