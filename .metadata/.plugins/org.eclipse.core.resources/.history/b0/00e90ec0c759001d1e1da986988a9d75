	private static void printGrid(char[][] board) {
		System.out.println(board[0][0] + "|" +  board[0][1] + "|" +  board[0][2] );
		System.out.println("-+-+-");
		System.out.println(board[1][0] + "|" +  board[1][1] + "|" +  board[1][2] );
		System.out.println("-+-+-");
		System.out.println(board[2][0] + "|" +  board[2][1] + "|" +  board[2][2] );
	}
	

	private static void placeSymbol(char[][] tictac, String symbol)
	{
		char sym = symbol.charAt(0);
		switch(position)
		{
		case 1:
			tictac[0][0]=sym;
			break;
		case 2:
			tictac[0][1]=sym;
			break;
		case 3:
