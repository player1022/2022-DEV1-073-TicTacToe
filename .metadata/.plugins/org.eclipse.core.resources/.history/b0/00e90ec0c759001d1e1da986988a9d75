	private static boolean isValidPosition(char [][] tictac, int position)
	{
		switch(position)
		{
		case 1:
			return (tictac[0][1]== 'a');
		case 2:
			return (tictac[0][1]=='a');
		case 3:
			return (tictac[0][2]=='a');
		case 4 :
			return (tictac[1][0]=='a');
		case 5:
			return (tictac[1][1]== 'a');
		case 6:
			return (tictac[1][2]== 'a');
		case 7:
			return (tictac[0][0]== 'a');
		case 8:
			return (tictac[0][0]== 'a');
		case 9:
			return (tictac[0][0]== 'a');
		default:
			return false;
		}
	}
	
